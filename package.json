  "scripts": {
    "build": "esbuild --bundle ./src/index.ts --outdir=dist --minify --sourcemap --platform=node",
    "postbuild": "mv dist/index.js dist/index.cjs && mv dist/index.js.map dist/index.cjs.map",
    "start": "node dist/index.cjs",
    "ts-mocha": "mocha -r ts-node/register -r tsconfig-paths/register",
    "test:types": "yarn tsc --noEmit",
    "test:unit": "NODE_ENV=test yarn ts-mocha 'tests/unit/**/*.spec.ts'",
    "test:integration": "yarn ts-mocha 'tests/integration/**/*.spec.ts'",
    "test:infrastructure": "yarn ts-mocha 'tests/infrastructure/**/*.spec.ts'",
    "prepare": "yarn husky install",
    "release": "yarn semantic-release",
    "coverage": "nyc yarn test:unit"
  },
  "devDependencies": {
    "@codedependant/semantic-release-docker": "^4.1.0",
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^9.0.1",
    "@types/chai": "^4.3.1",
    "@types/joi": "^17.2.3",
    "@types/mocha": "^9.1.1",
    "@types/nodemailer": "^6.4.4",
    "@types/ramda": "^0.28.15",
    "@types/sinon": "^10.0.13",
    "axios-mock-adapter": "^1.21.1",
    "chai": "^4.3.6",
    "esbuild": "^0.14.51",
    "husky": "^8.0.0",
    "mocha": "^10.0.0",
    "nodemon": "^2.0.19",
    "nyc": "^15.1.0",
    "semantic-release": "^19.0.5",
    "sinon": "^14.0.0",
    "ts-mocha": "^10.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "cheerio": "^1.0.0-rc.12",
    "fp-ts": "^2.12.2",
    "joi": "^17.6.0",
    "moment": "^2.29.4",
    "nodemailer": "^6.7.8",
    "ramda": "^0.28.0",
    "winston": "^3.8.1",
    "yaml": "^2.1.1"
  }
